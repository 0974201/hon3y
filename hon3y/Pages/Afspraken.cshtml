@page
@model hon3y.Pages.Afspraken
@{
    ViewData["Title"] = "Formulier";
}

<div class="form-group">
    <form asp-antiforgery="true" method="post">
        <label for ="voornaam">Voornaam</label>
        <input name="voornaam" type="text" placeholder="voornaam" asp-for="Afspraak.Voornaam" class="form-control" /><br />
        <label for="achternaam">Achternaam</label>
        <input name="achternaam" type="text" placeholder="achternaam" asp-for="Afspraak.Achternaam" class="form-control" /><br />
        <label for="email">Emailadres</label>
        <input name="email" type="email" placeholder="email" asp-for="Afspraak.Email" class="form-control" /><br />
        <label for="telefoonnummer">Telefoonnummer</label>
        <input name="telefoonnummer" type="number" asp-for="Afspraak.Telefoonnummer" placeholder="telefoonnummer" class="form-control" /><br />
        <label for="afspraakreden">Afspraakreden</label>
        <input name="afspraakreden" type="text" asp-for="Afspraak.AfspraakReden" placeholder="reden afspraak" class="form-control" /><br />
        <label for="datum">Datum</label>
        <input name="datum" type="datetime-local" asp-for="Afspraak.Datum" placeholder="@DateTime.Now.ToString("dd-MM-yyyy HH:mm")" class="form-control" /><br />
        <button>Verzend</button>
    </form>
</div>